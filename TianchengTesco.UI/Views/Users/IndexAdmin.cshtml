<script>
    $(function () {
        if ($.cookie('UId') == null) {
            this.location.href = '/Users/Login';
        }
        $("#UName").html($.cookie('UName'));
    })
    var UId = $.cookie('UId');
    $(function () {
        ////异步加载节点
        var setting = {
            async: {
                type: "get",
                enable: true,
                url: "http://139.159.183.14:8888/TianchengTesco/GetPermissionsByUserId?UsersId=" + UId,//数据请求地址
                dataFilter: filter
            },
            data: {
                simpleData: {
                    enable: true,
                },
                key: {
                    url: "xUrl"
                }
            },
            callback: {
                onClick: function (a, b, c, d) {
                    nodeClick(a, b, c, d);
                }
            }
        };
        //初始化zTree
        $.fn.zTree.init($("#treeDemo"), setting);
    })
    //节点点击事件
    function nodeClick(event, treeId, treeNode, clickFlag) {
        console.log(treeNode.Url);
        window.open(treeNode.Url, "main")
    }
    //数据处理
    function filter(treeId, parentNode, childNodes) {
        console.log(childNodes);
        if (!childNodes) return null;
        for (var i = 0, l = childNodes.length; i < l; i++) {
            childNodes[i].name = childNodes[i].Name.replace(/\.n/g, '.');
            childNodes[i].xUrl = childNodes[i].Url.replace(/\.n/g, '.');
            childNodes[i].xUrl = "javascript:void(0)";
        }
        return childNodes;
    }
    //退出登录
    function unlogin() {
        //询问框
        layer.confirm('确定退出吗？', {
	    offset: ['200px', '500px'],
            btn: ['确定', '取消'] //按钮
        }, function () {
            parent.location.href = '/Users/Login';
        }, function () {
            layer.msg('再考虑一下', {
 offset: ['200px', '500px'],
                time: 20000 //20s后自动关闭
            });
        });
    }
</script>
