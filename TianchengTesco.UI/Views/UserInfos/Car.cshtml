<script>
    $(function () {
        show();
        $("[name=ck]").click(function () {
            
        })
    })
    //显示我的购物车
    function show() {
        var index = 0;
        $.ajax({
            url: "http://139.159.183.14:8888/TianchengTesco/QueryCars?pageIndex=" + pageIndex + "&UId=" + $.cookie('UserId') ,
            type: "post",
            beforeSend: function () {
                //loading层 var index = 0;
                index = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });
            },
            complete: function () {
                layer.close(index);
            },
            success: function (d) {
                console.log(d);
                $("#list").html("");
                pageIndex = d.PageIndex;
                pageCount = d.PageCount;
                for (var i = 0; i < d.Data.length; i++) {
                    var li = '<li><input type="checkbox" name="ck" value="' + d.Data[i].Id + '" /></li>'
                        + '<li><a href="javascript:void(0)" onclick="tiao1(' + d.Data[i].GId + ')" ><img src="' + d.Data[i].Img + '" width="100" height="80" /></a></li>'
                        + '<li>' + d.Data[i].GName + '</li>'
                        + '<li name="price' + d.Data[i].Id + '">' + d.Data[i].Price + '</li>'
                        + '<li><span onclick="jian(' + d.Data[i].Id + ')">-</span>&nbsp;<input type="text" style="width:30px" name="Nums' + d.Data[i].Id+'" value="' + d.Data[i].Nums + '" />&nbsp;<span onclick="jia(' + d.Data[i].Id +')">+</span></li>'
                        + '<li name="' + d.Data[i].Id + 'a">' + (d.Data[i].Nums * d.Data[i].Price) + '元</li>'
                        + '<li><a href="javascript:void(0)" onclick="del(' + d.Data[i].Id + ')" >移除商品</a></li>'
                    $("#list").append(li);
                }
            }
        })
    }
    //减数量
    function jian(id) {
        var index = 0;
        var num = Number($("[name=Nums" + id +"]").val());
        if (num - 1 < 0) {
            return;
        }
        num -= 1
        $("[name=Nums" + id + "]").val(num);
        $("[name=" + id + "a]").html(num * Number($("[name=price" + id + "]").html()) + "元");
        $.ajax({
            url: "http://139.159.183.14:8888/TianchengTesco/UpdateCars?Id=" + id + "&Nums=" + $("[name=Nums" + id + "]").val(),
            type: "get",
            beforeSend: function () {
                //loading层 var index = 0;
                index = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });
            },
            complete: function () {
                layer.close(index);
            },
            success: function (d) {
                console.log(d);
                
            }
        })
    }
    //加数量
    function jia(id) {
        var index = 0;
        var num = Number($("[name=Nums" + id + "]").val());
        if (num + 1 > 10) {
            return;
        }
        num += 1
        $("[name=Nums" + id +"]").val(num);
        $("[name=" + id + "a]").html(num * Number($("[name=price" + id + "]").html()) + "元");
        $.ajax({
            url: "http://139.159.183.14:8888/TianchengTesco/UpdateCars?Id=" + id + "&Nums=" + $("[name=Nums" + id + "]").val(),
            type: "get",
            beforeSend: function () {
                //loading层 var index = 0;
                index = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });
            },
            complete: function () {
                layer.close(index);
            },
            success: function (d) {
                console.log(d);

            }
        })
    }
    //移除
    function del(id) {
        var index = 0;
            $.ajax({
                url: "http://139.159.183.14:8888/TianchengTesco/DeleteCars?Ids=" + id,
                type: "post",
                beforeSend: function () {
                    //loading层 var index = 0;
                    index = layer.load(1, {
                        shade: [0.1, '#fff'] //0.1透明度的白色背景
                    });
                },
                complete: function () {
                    layer.close(index);
                },
                success: function (d) {
                    console.log(d);
                    $("#qx").prop("checked", "");
                    show();
                }
            })
    }
    //结算
    function settlement() {
        var ids = [];
        $("[name=ck]:checked").each(function () {
            ids.push($(this).val());
        })
        if (ids.length < 1) {
            layer.msg('请选择要结算的商品', {
                time: 20000//20s后自动关闭
            }); 
            return;
        }
        var index = 0;
        $.ajax({
            url: "http://139.159.183.14:8888/TianchengTesco/Settlement?Ids="+ids,
            type: "post",
            beforeSend: function () {
                //loading层 var index = 0;
                index = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });
            },
            complete: function () {
                layer.close(index);
            },
            success: function (d) {
                console.log(d);
                if (d.length > 0) {
                    layer.msg('订单提交成功', {
                        time: 20000, //20s后自动关闭
                        btn: ['知道了'],
                        end: function () {
                            var ids = [];
                            for (var i = 0; i < d.length; i++) {
                                ids.push(d[i]);
                            }
                            console.log(ids);
                            window.open('/UserInfos/Pay?Ids=' + ids, 'main');
                        }
                    });
                    
                }
                else {
                    layer.msg('订单提交失败', {
                        time: 20000//20s后自动关闭
                    }); 
                }
            }
        })
    }
    function tiao1(id) {
        window.open('/UserInfos/Item?GId=' + id, 'main');
    }
</script>